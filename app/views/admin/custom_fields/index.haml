- content_for :title_header do
  %h1
    = t("layouts.admin.admin")
    = "-"
    = t(".listing_fields")
  
= render :partial => "layouts/left_hand_navigation", :locals => { :links => admin_links_for(@community) }

.left-navi-section
  - if @custom_fields.empty?
    .row
      .col-12
        = t(".no_custom_listing_fields")
  - else
    #custom-fields-list
      .row.visible-tablet
        .col-5.custom-fields-list-title
          = t(".field_title")
        .col-5.custom-fields-list-title
          = t(".field_type")
      = render :partial => "listed_custom_field", :collection => @custom_fields.sort, :as => :custom_field
    #custom-field-ajax-status
      %span.custom-field-ajax-status-message#custom-field-ajax-saving
        Saving new listing order
      %span.custom-field-ajax-status-message#custom-field-ajax-success
        Successfully saved
      %span.custom-field-ajax-status-message#custom-field-ajax-error
        Error during the save. Please refresh the page and try again.
  .row
    .col-12
      = link_to t(".add_new_field"), new_admin_custom_field_path

