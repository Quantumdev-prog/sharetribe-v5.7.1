.listed_listing
  .listing_image
    - unless listing.listing_images.empty?
      = link_to (image_tag listing.listing_images.first.image.url(:thumb), :class => "listing_main_image", :alt => listing.title), listing_path(listing) 
    - else
      %div{:class => "listing_image_#{listing.category}"}
        =  link_to "#", listing_path(listing) , :title => listing.title
  .listed_listing_text
    %h5= link_to listing.title, listing
    %p{:class => "description"}= (listing.description.blank? ? t("listings.show.no_description") : truncate(listing.description, :length => 90, :omission => "..."))
    
    - unless current_user?(listing.author)
      = link_to t("listings.link_labels.link_label_for_#{listing.category}_#{listing.listing_type}"), reply_to_listing_path(:id => listing.id)
      &nbsp;|&nbsp;
    = link_to t('listings.please_comment'), "#"
      
    /.float_right
    /%span
    =# link_to listing.author.given_name, "#"
    =# time_ago(listing.created_at)
