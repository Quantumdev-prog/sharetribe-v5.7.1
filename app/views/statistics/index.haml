#statistics
  %h1
    Statistics

  - if @current_community
    %h2
      Community:
      = @current_community.name
    
    - if @community_stats
      = render :partial => "statistics",  :locals => { :stats => @community_stats }
    - else
      %p
        Community statistics are not available.


  %h2
    Whole Sharetribe server
  
  = render :partial => "statistics",  :locals => { :stats => @server_stats }