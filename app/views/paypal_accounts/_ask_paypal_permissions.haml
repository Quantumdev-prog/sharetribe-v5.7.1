- content_for :javascript do
  ST.initializeNewPaypalAccountHandler("ask_paypal_permissions", "#{order_permission_action}");

.row
  %h3= title

.row
  - create_link = link_to(I18n.t("paypal_accounts.new.create_paypal_account"), create_url, target: "_blank")
  - upgrade_link = link_to(I18n.t("paypal_accounts.new.upgrade_paypal_account"), upgrade_url, target: "_blank")
  - text = t("paypal_accounts.new.paypal_account_email_info_text", {create_paypal_account: create_link, upgrade_paypal_account: upgrade_link, currency: "<strong>#{currency}</strong>"}).html_safe
  = render :partial => "layouts/info_text", :locals => {text: text}

.row.send-button-wrapper
  %button#ask_paypal_permissions
    = t("paypal_accounts.new.connect_paypal_account")
.row
  .paypal-redirect-message.hidden
    - paypal_redirect_link = "<a href='#' id='ask_paypal_permissions_redirect'>#{t("paypal_accounts.redirect_link_text")}</a>"
    = t("paypal_accounts.redirect_message", redirect_link: paypal_redirect_link).html_safe
