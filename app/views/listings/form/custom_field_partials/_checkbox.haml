- custom_field.options.sort.each do |opt|
  .checkbox-container
    - selected = custom_field_value ? custom_field_value.selected_options.include?(opt) : false
    = check_box_tag "custom_fields[#{custom_field.id}][]", opt.id, selected, {id: "custom_fields_#{custom_field.id}_#{opt.id}"}
    = label_tag "custom_fields_#{custom_field.id}_#{opt.id}", "#{opt.title(I18n.locale)}", :class => "settings-checkbox-label"
