.new_listing_form_field_container
  = form.label :destination, t(".destination") + "*:", :class => "input"
  = form.text_field(:destination, :class => "title_text_field", :maxlength => "48", 
                    :onblur => "startRoute()")
  = form.fields_for :destination_loc do |loc|
    = loc.hidden_field :address, :value => destination_loc.address
    = loc.hidden_field :google_address, :value => destination_loc.google_address
    = loc.hidden_field :latitude, :value => destination_loc.latitude
    = loc.hidden_field :longitude, :value => destination_loc.longitude
    = loc.hidden_field :type, :value => destination_loc.type
