- content_for :javascript do
  initialize_update_account_info_form("#{I18n.locale}","#{t(".change")}","#{t("common.cancel")}","#{t("people.new.email_is_in_use")}", "You must pick at least one email address for receiving notifications. If you don't want to receive any emails from Sharetribe, check your email notification settings.");

- content_for :title_header do
  %h1= t("layouts.no_tribe.settings")
  
= render :partial => "layouts/left_hand_navigation", :locals => { :links => settings_links_for(@current_user, @current_community) }

#person_settings_form.left-navi-section.settings-section.account-settings
  -# Username
  .account-settings-row
    .ss-key.account-settings-icon
    .account-settings-text
      %b
        = username_label + ":"
      = @person.username
  
  -# Email
  .account-settings-row
    = form_for @person, :html => {:id => 'email_form'} do |form|
      .ss-mail.account-settings-icon
      .account-settings-text#account_email_content
        .account-settings-title
          %b
            = t(".email_addresses")
      .account-settings-email-form
        .account-settings-email-row
          .account-settings-email-row-address
            %b Address
          .account-settings-email-row-delete
            &nbsp;
          .account-settings-email-row-send-notification
            %b Send notifications
          .account-settings-email-row-confirmed
            %b Confirmation
        .account-settings-email-content-rows
          - @person.emails.each do |email|
            - unless email.new_record? 
              .account-settings-email-row
                .account-settings-email-row-address
                  = email.address
                .account-settings-email-row-delete
                  = link_to icon_tag("cross"), "#"
                .account-settings-email-row-send-notification
                  = check_box_tag "person[send_notifications][]", email.id, email.send_notifications?
                .account-settings-email-row-confirmed
                  = email.confirmed_at ? "Confirmed" : "Pending"
        = link_to "+ Add new email address", "#", :class => "account-new-email-link"
        .account-settings-hidden-email-form
          = fields_for "person[email_attributes]", Email.new do |email_form|
            .account-settings-email-row
              .account-settings-email-row-address
                = email_form.text_field :address, :class => "text_field_account", :maxlenght => "255", :placeholder => t(".new_email"), :disabled => "disabled"
              .account-settings-email-row-delete.account-settings-new-email-row
                = link_to icon_tag("cross"), "#", :class => "account-hide-new-email-link"
              .account-settings-email-row-send-notification.account-settings-new-email-row
                = email_form.check_box :send_notifications, :disabled => "disabled"
              .account-settings-email-row-confirmed
                &nbsp;
        
        = form.button t(".save"), :class => "send_button_account", :id => "email_submit"
    #account_email_form.email-form
      
        
  
  -# Password
  .account-settings-row
    .ss-lock.account-settings-icon
    .account-settings-text#account_password_content
      %b
        = t("common.password") + ":"
      = "********"
      = link_to t(".change"), "#", :id => "account_password_link", :class => "change-link"
    #account_password_form.password-form
      = form_for @person, :html => {:id => 'password_form'} do |form|
        = form.password_field :password, :class => :text_field_account, :maxlength => "255", :placeholder => t(".new_password")
        = form.password_field :password2, :class => :text_field_account, :maxlength => "255", :placeholder => t(".confirm_new_password")
        = form.button t(".save"), :class => "send_button_account", :id => "password_submit"
  
  -# Account removal
  .account-settings-row
    .ss-deleteuser.account-settings-icon
    .account-settings-text
      %b
        = t(".delete_account")
    %p
      = t(".instructions_to_delete_account", :contact_admin_link => link_to(t(".contact_admin"), new_user_feedback_path)).html_safe
    = form_tag url_for(:controller => :people, :action => :destroy, :id => @current_user.id), :method => :delete do
      = button_tag t('.delete_account_button'), :id => "delete_account_button", :data => {:confirm => t('.delete_account_confirmation_popup')}
    