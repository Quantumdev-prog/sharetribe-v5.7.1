- if current_user?(@person)
  %a.profile-edit-link{href: profile_person_settings_path(:person_id => @current_user.id.to_s)}
    .content
      = t("people.show.edit_profile_info")
- else
  %a.profile-contact-link{href: new_person_person_message_path(:person_id => @person.id)}
    .content
      = t("people.show.contact", :person => @person.given_name_or_username)
= render :partial => "people/follow_button", :locals => { :person => @person } 

