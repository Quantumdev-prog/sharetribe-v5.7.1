.text
  = t('.password_recovery_instructions')
= form_tag :action => "forgot_password" do
  .form_field_container
    %label{:for => "email"}
      = t('.email') + ":"
    = text_field_tag("email", params[:q], :class => "text_field")
  .form_field_container  
    = submit_tag t('.request_new_password'), :class => "send_button"