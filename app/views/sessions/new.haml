.grid_10.prefix_7.suffix_7
  #login_form
    %h2
      = t('.login_to_kassi')
    .form_field_container
      %label{:for => "username"}
        = t('.username') + ":"
      = text_field_tag("username", params[:q], :class => "text_field")
    .form_field_container  
      %label{:for => "password"}
        = t('.password') + ":"
      = password_field_tag("username", params[:q], :class => "text_field")    
    .form_field_container
      = submit_tag(t('.login'), :class => "send_button")
    .form_field_container
      .links
        = link_to t('.create_new_account'), "#"
        %span
          |
        = link_to t('.i_forgot_my_password'), "#", :onclick => "$('#password_forgotten').slideToggle('slow');"
    #password_forgotten
      = render :partial => "password_forgotten"