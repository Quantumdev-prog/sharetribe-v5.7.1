- content_for :javascript do
  initialize_dashboard('#{t("dashboard.index.email_default_text")}');

= render :partial => "header"

#home_main
  .container_12
    .grid_7.alpha
      #home_main_title
        %h1
          = t(".create_your_own")
          %br/
          %span.indentation
            = t(".sharing_website")
      #home_main_screenshot
        = image_tag("/images/dashboard/kassi_homepage_screenshot.png", :alt => "This is what a Kassi community looks like")
    .grid_5.omega
      %p.intro
        = t(".main_description")
      .get_started
        = link_to t(".get_started"), new_tribe_path, :class => "get_started"
      %p.browse
        = "..." + t("common.or")
        = link_to(t(".browse_communities_around_you"), tribes_path, :class => "green_part_link")
      %p.tour
        = t(".want_to_know_more")
        = link_to t(".take_a_tour"), tour_path, :class => "green_part_link"
= render :partial => "lower_middle"
= render :partial => "footer"
