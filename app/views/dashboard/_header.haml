#header
  .container_12
    .grid_2.alpha
      #logo
        = image_tag("/images/dashboard/kassi_logo_text.png", :alt => "Kassi")
    .grid_5
      #slogan
        = t("dashboard.index.slogan")
    .grid_5.omega
      #language_switch
        #select_language_form
          - if APP_CONFIG.available_locales.count > 1
            = form_tag("/change_locale", :method => "get") do
              = hidden_field_tag :redirect_uri, @return_to
              = select_tag 'locale', options_for_select([["English", "en"], ["Suomi", "fi"], ["Español", "es"], ["Ελληνικά", "el"]], I18n.locale), :onchange => 'this.form.submit()', :class => 'language_select'
        #language_label
          = t("dashboard.index.language")