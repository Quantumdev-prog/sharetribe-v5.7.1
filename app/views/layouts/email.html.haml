%div{:style => "min-width:100%"}
  %table{:cellpadding => "0", :cellspacing => "0", :border => "0", :align => "center", :style => "text-align:center;margin:0;padding:0;width:100%!important;line-height:100%!important;background: #ebebeb;"}
    %tbody
      %tr
        %td
          %table{:cellpadding=> "0", :cellspacing => "0", :border => "0", :align => "center", :style => "text-align:center"}
            %tr
              %td{:style => "width:100%;max-width:602px", :valign => "top"}
                %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "background:#fff;text-align: left;"}
                  %tbody
                    %tr
                      %td{:width => "7.5%"}
                      %td{:valign => "top", :width => "85%", :style => "padding: 20px 0 40px 0;font-family:Helvetica Neue, Helvetica, Arial, sans-serif;font-weight:400;font-size:14px;margin-bottom:5px; text-align: left;line-height:22px;"}
                        - if @recipient
                          %h1{:style => "font-family:Helvetica Neue, Helvetica, Arial, sans-serif;font-weight:400;font-size:18px;margin-top:20px;margin-bottom:5px; text-align: left;line-height:22px;"}
                            = t("emails.common.hey", :name => @recipient.given_name_or_username)
                          = yield
                      %td{:width => "7.5%"}
            %tr
              %td{:style => "text-align: left;width:100%;max-width:602px;padding: 5px 50px;text-align: center;"}
                %p{:style => "margin-top:10px;margin-bottom:5px;font-family:helvetica,arial,sans-serif;font-size:12px;color:#464646;"}
                  = t("emails.community_updates.reduce_email_footer_text", :settings_link => link_to(t("emails.community_updates.settings_link_text"), notifications_person_settings_url(:person_id => @recipient.id, :auth => @auth_token, :ref => "weeklymail"), :style => "color:#d96e21; text-decoration: none;"), :unsubscribe_link => link_to(t("emails.community_updates.unsubscribe_link_text"), unsubscribe_person_settings_url(:person_id => @recipient.id, :email_type => "community_updates", :auth => @auth_token, :ref => "weeklymail"), :style => "color:#d96e21; text-decoration: none;")).html_safe
                %p{:style => "margin-top:10px;margin-bottom:5px;font-family:helvetica,arial,sans-serif;font-size:12px;color:#464646;"}
                  = t("emails.community_updates.tribe_creation_promotion_footer", :create_tribe_link =>  link_to(t("emails.community_updates.create_tribe_link_text"), "http://#{APP_CONFIG.domain}/#{@recipient.locale}?ref=weeklymail", :style => "color:#d96e21; text-decoration: none;")).html_safe