#notifications.container_24
  - [:notice, :warning, :error].each do |announcement|
    - if flash[announcement]  
      %div{:class => announcement.to_s}
        .notification_text
          - if flash[announcement].is_a?(Array)
            = t(".#{flash[announcement][0]}")
            = link_to(flash[announcement][1], flash[announcement][2]) 
          - else  
            = t(".#{flash[announcement]}")
        .close_notification_link  
          = link_to "X", "#", :onclick => "$('#notifications').slideUp('fast');"
