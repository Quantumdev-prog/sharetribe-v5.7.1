- url = listing_url(@url_params.merge({:id => @listing.id}))

%tr
  %td{:align => "left"} 
    %font{body_font}
      = t("emails.new_update_to_listing.has_updated_#{@listing.listing_type}_you_follow_in_kassi", :author => @listing.author.name, :listing => @listing.title)
      
= render :partial => "action_button", :locals => { :text => t("emails.new_update_to_listing.view_changes"), :url => url}