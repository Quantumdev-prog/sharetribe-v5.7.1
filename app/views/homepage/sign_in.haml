- content_for :javascript do
  initialize_login_form();

#teaser
  #teaser_left
    %h1= t("homepage.index.lend_rent_help_carpool")
    %p
      = render :file => community_file("teaser_welcome_text", true), :locals => {:community_name => @current_community.name_with_separator(I18n.locale)}
  #teaser_right
    #frontpage_login_form
      %h2
        = t('sessions.new.login_to_kassi')
      = form_tag("#{APP_CONFIG.login_domain}#{sessions_path}",:action => "create") do  
        .form_field_container
          %label{:for => "username"}
            = t('sessions.new.username') + ":"
          = text_field_tag :username, nil, :value => session[:form_username], :class => :text_field 
        .form_field_container  
          %label{:for => "password"}
            = t('sessions.new.password') + ":"
          = password_field_tag :password, nil, :class => :text_field  
        .form_field_container
          = hidden_field_tag :community, @current_community.domain
          = submit_tag(t('sessions.new.login'), :class => "send_button")
        .form_field_container
          .links
            = link_to t('sessions.new.create_new_account'), sign_up_path
            %br/
            = link_to t('sessions.new.i_forgot_my_password'), "#", :id => "password_forgotten_link"
      #password_forgotten
        = render :partial => "sessions/password_forgotten"

#recent_listings.grid_24
 
  #recent_requests.grid_12.alpha
    .recent_listings
      %h3{:class => "orange_wide"}
        = t('.recent_requests')
      - if @requests.size > 0
        = render :partial => "recent_listing_sign_in_page", :collection => @requests, :as => :listing, :spacer_template => "request_spacer_wide"
  #recent_offers.grid_12.omega
    .recent_listings
      %h3{:class => "brown_wide"}
        = t('.recent_offers')
      - if @offers.size > 0
        = render :partial => "recent_listing_sign_in_page", :collection => @offers, :as => :listing, :spacer_template => "offer_spacer_wide"