- content_for :javascript do
  initialize_send_message_form('#{I18n.locale}');

.grid_10.prefix_7.suffix_7
  #new_message_form
    - if params[:transaction_proposal]
      %h2= t(".#{transaction_proposal_form_title(@listing)}", :listing => link_to(@listing.title, @listing), :person => link_to(@listing.author.given_name_or_username, @listing.author)).html_safe
    - else
      %h2= t(".send_message_to_user", :person => @listing.author.given_name_or_username)
    %p
      = t(".this_message_is_private", :person => @listing.author.given_name_or_username)
      - if params[:transaction_proposal]
        = t(".you_will_get_notified_of_acceptance", :person => @listing.author.given_name_or_username)
      - else
        = t(".you_will_get_notified", :person => @listing.author.given_name_or_username)
    = form_for @conversation, :url => person_messages_path(:person_id => @current_user.id) do |form|
      = form.error_messages
      .form_field_container
        - if params[:transaction_proposal]
          .title_label
            = t(".title") + ":"
          .title_content
            = get_message_title(@listing)
            = form.hidden_field :title, :value => get_message_title(@listing)
        - else
          = form.label :title, t('.title') + ":"
          = form.text_field :title, :class => "text_field", :maxlength => "120"
      .form_field_container
        = fields_for "conversation[message_attributes]", Message.new do |message_form|
          = message_form.label :content, t('.message') + ":"
          = message_form.text_area :content, :class => "text_area"
          = message_form.hidden_field :sender_id, :value => @current_user.id
      .form_field_container
        = hidden_field_tag "conversation[conversation_participants][#{@current_user.id}]", true
        = hidden_field_tag "conversation[conversation_participants][#{@listing.author.id}]", false
        - if @listing
          = form.hidden_field :listing_id, :value => @listing.id
        = form.hidden_field :transaction_proposal, :value => (params[:transaction_proposal] || 0)
        = form.submit t(".send_#{@listing.discussion_type}_message"), :class => "send_button"


