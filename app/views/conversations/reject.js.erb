/* Update conversation status label */
$("#conversation_<%= @conversation.id.to_s %>_status").html("<%= escape_javascript(render(:partial => 'conversations/status', :locals => { :conversation => @conversation })) %>");

/* Highlight the changed status */
$("#conversation_<%= @conversation.id.to_s %>_status").effect("highlight", {}, 2000);

/* Remove unread color */
$("#conversation_<%= @conversation.id.to_s %>").removeClass("unread");

/* Update unread messages count */
$(".messages-badge").html("<%= escape_javascript(render :partial => 'layouts/badge', :locals => { :count => Conversation.unread_count(@current_user.id) } ) %>");