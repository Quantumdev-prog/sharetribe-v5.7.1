- last_message = conversation.last_message(@current_user)
.conversation{:class => (conversation.read_by?(@current_user) ? "" : "unread")}
  .person_image
    = small_avatar_thumb conversation.other_party(@current_user)
  .conversation_left
    = link_to last_message.sender.name, last_message.sender
    %br/
    %span= l last_message.created_at, :format => :short
  .conversation_center
    %h3= link_to conversation.title, single_conversation_path(:conversation_type => action_name, :id => conversation.id)
    %span= link_to(truncate(last_message.content, :length => 70, :omission => "..."), single_conversation_path(:conversation_type => action_name, :id => conversation.id))
  .conversation_right